<odoo>
    <data noupdate="1">

        <!-- API Documentation Demo Data -->
        <record id="api_documentation_demo" model="api.documentation">
            <field name="name">Demo API Documentation</field>
            <field name="description">This is a demo API documentation for testing purposes.</field>
            <field name="state">draft</field>
        </record>

        <!-- API Endpoint Demo Data -->
        <record id="api_endpoint_demo_1" model="api.endpoint">
            <field name="name">Get Products</field>
            <field name="documentation_id" ref="api_documentation_demo"/>
            <field name="route">/api/products</field>
            <field name="request_method">GET</field>
            <field name="response_model">product.template</field>
            <field name="description">Retrieve a list of products.</field>
        </record>

        <record id="api_endpoint_demo_2" model="api.endpoint">
            <field name="name">Create Product</field>
            <field name="documentation_id" ref="api_documentation_demo"/>
            <field name="route">/api/products</field>
            <field name="request_method">POST</field>
            <field name="response_model">product.template</field>
            <field name="description">Create a new product.</field>
        </record>

        <!-- API History Demo Data -->
        <record id="api_history_demo" model="api.history">
            <field name="name">Demo API History</field>
            <field name="endpoint_id" ref="api_endpoint_demo_1"/>
            <field name="request_data">{'name': 'Demo Product'}</field>
            <field name="response_data">{'id': 1, 'name': 'Demo Product'}</field>
            <field name="status">success</field>
        </record>

        <!-- API Favorites Demo Data -->
        <record id="api_favorites_demo" model="api.favorites">
            <field name="name">Favorite Endpoint</field>
            <field name="endpoint_id" ref="api_endpoint_demo_1"/>
            <field name="user_id" ref="base.user_demo"/>
        </record>

    </data>
</odoo>