<odoo>
    <data noupdate="1">

        <!-- Group for API Access -->
        <record id="group_api_access" model="res.groups">
            <field name="name">API Access</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <!-- Access Control List (ACL) for API Documentation -->
        <record id="api_documentation_model_access" model="ir.model.access">
            <field name="name">api.documentation.access</field>
            <field name="model_id" ref="model_api_documentation"/>
            <field name="group_id" ref="group_api_access"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Access Control List (ACL) for API Endpoints -->
        <record id="api_endpoint_model_access" model="ir.model.access">
            <field name="name">api.endpoint.access</field>
            <field name="model_id" ref="model_api_endpoint"/>
            <field name="group_id" ref="group_api_access"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Access Control List (ACL) for API History -->
        <record id="api_history_model_access" model="ir.model.access">
            <field name="name">api.history.access</field>
            <field name="model_id" ref="model_api_history"/>
            <field name="group_id" ref="group_api_access"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Access Control List (ACL) for API Favorites -->
        <record id="api_favorites_model_access" model="ir.model.access">
            <field name="name">api.favorites.access</field>
            <field name="model_id" ref="model_api_favorites"/>
            <field name="group_id" ref="group_api_access"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>